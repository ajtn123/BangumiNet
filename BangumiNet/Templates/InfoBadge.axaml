<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">  
  <Design.PreviewWith>
    <StackPanel Width="400" Spacing="10">      
        <StackPanel Background="{DynamicResource SystemRegionBrush}">
          <InfoBadge Label="ok" Text="1" HorizontalAlignment="Left"/>
          <InfoBadge Text="1" HorizontalAlignment="Left"/>
          <InfoBadge Label="ok" HorizontalAlignment="Left"/>
        </StackPanel>
    </StackPanel>
  </Design.PreviewWith>
 
  <ControlTheme x:Key="{x:Type InfoBadge}" TargetType="InfoBadge">
    <Setter Property="Template">
      <ControlTemplate>
        <Border Classes="Card TagBadge" Classes.Meta="{TemplateBinding IsHighlighted}">
            <TextBlock>
                <Run Text="{TemplateBinding Label}" Classes="Name"/>
                <Run Text="{TemplateBinding Text}" Classes="Count"/>
            </TextBlock>
        </Border>
      </ControlTemplate>
    </Setter>
  </ControlTheme>
</ResourceDictionary>
