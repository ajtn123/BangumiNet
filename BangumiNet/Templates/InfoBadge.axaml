<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">  
  <Design.PreviewWith>
    <StackPanel Width="400" Spacing="10">      
        <StackPanel Background="{DynamicResource SystemRegionBrush}">
          <InfoBadge Label="ok" Text="1" HorizontalAlignment="Left"/>
          <InfoBadge Text="1" HorizontalAlignment="Left"/>
          <InfoBadge Label="ok" HorizontalAlignment="Left"/>
        </StackPanel>
    </StackPanel>
  </Design.PreviewWith>
 
  <ControlTheme x:Key="{x:Type InfoBadge}" TargetType="InfoBadge">
    <Setter Property="Template">
      <ControlTemplate>
        <Border Classes="Card TagBadge" Classes.Meta="{TemplateBinding IsHighlighted}">
            <StackPanel Spacing="5" Orientation="Horizontal">
                <TextBlock Text="{TemplateBinding Label}" IsVisible="{TemplateBinding Label, Converter={StaticResource NEWCvt}}" Classes="Name"/>
                <TextBlock Text="{TemplateBinding Text}" IsVisible="{TemplateBinding Text, Converter={StaticResource NEWCvt}}"/>
            </StackPanel>
        </Border>
      </ControlTemplate>
    </Setter>
  </ControlTheme>
</ResourceDictionary>
