<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:bn="https://github.com/ajtn123/BangumiNet"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="bn:HomeViewModel"
             x:Class="BangumiNet.Views.HomeView">
    <ScrollViewer>
        <StackPanel Margin="5" Spacing="5">
            <Border Classes="Card Large">
                <Grid ColumnDefinitions="*,Auto" Height="50">
                    <TextBlock Text="{Binding Greeting}" VerticalAlignment="Center"/>
                    <Border Grid.Column="1" HorizontalAlignment="Right" CornerRadius="5" ClipToBounds="True">
                        <Image Source="{Binding Me?.AvatarSmall^}"/>
                    </Border>
                </Grid>
            </Border>
            <Grid ColumnDefinitions="*,*" ColumnSpacing="5">
                <StackPanel Spacing="5">
                    <bn:SubjectCollectionListView DataContext="{Binding CollectionListViewModel}"/>
                    <bn:TimelineView DataContext="{Binding TimelineViewModel}"/>
                </StackPanel>
                <bn:CalendarView DataContext="{Binding Today}" Grid.Column="1"/>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
