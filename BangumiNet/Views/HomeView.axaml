<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:v="using:BangumiNet.Views"
             xmlns:vm="using:BangumiNet.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:HomeViewModel"
             x:Class="BangumiNet.Views.HomeView">
    <ScrollViewer>
        <StackPanel Margin="5" Spacing="5">
            <Border Classes="Card Large">
                <Grid ColumnDefinitions="*,Auto" Height="50">
                    <TextBlock Text="{Binding Greeting}" VerticalAlignment="Center"/>
                    <Border Grid.Column="1" HorizontalAlignment="Right" CornerRadius="5" ClipToBounds="True">
                        <Image Source="{Binding Me?.AvatarSmall^}"/>
                    </Border>
                </Grid>
            </Border>
            <Grid ColumnDefinitions="*,*" ColumnSpacing="5">
                <StackPanel Spacing="5">
                    <Border Classes="Card">
                        <Grid ColumnDefinitions="Auto,*">
                            <TextBlock>收藏</TextBlock>
                            <TextBlock Grid.Column="1" HorizontalAlignment="Right">想看</TextBlock>
                        </Grid>
                    </Border>
                    <v:SubjectCollectionListView DataContext="{Binding CollectionListViewModel}"/>
                </StackPanel>
                <v:CalendarView DataContext="{Binding Today}" Grid.Column="1"/>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
