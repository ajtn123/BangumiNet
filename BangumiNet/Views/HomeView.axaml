<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:v="using:BangumiNet.Views"
             xmlns:vm="using:BangumiNet.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:HomeViewModel"
             x:Class="BangumiNet.Views.HomeView">

    <UserControl.DataContext>
        <vm:HomeViewModel/>
    </UserControl.DataContext>

    <StackPanel Margin="5" Spacing="5">
        <Border Classes="Card">
            <Grid ColumnDefinitions="*,Auto" Height="50" Margin="5">
                <TextBlock Text="{Binding Greeting}" VerticalAlignment="Center"/>
                <Border Grid.Column="1" HorizontalAlignment="Right" CornerRadius="5" ClipToBounds="True">
                    <Image Source="{Binding Avatar}"/>
                </Border>
            </Grid>
        </Border>
		<Grid ColumnDefinitions="*,*">
			<StackPanel Margin="0,0,5,0">
				<Border Classes="Card">
					<TextBlock Margin="5,0,0,0">收藏</TextBlock>
				</Border>
				<v:SubjectCollectionView DataContext="{Binding SubjectCollectionViewModel}"/>
			</StackPanel>
			<v:CalendarView DataContext="{Binding Today}" Grid.Column="1" Margin="5,0,0,0"/>
		</Grid>
    </StackPanel>
</UserControl>
