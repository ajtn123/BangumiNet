<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:bn="https://github.com/ajtn123/BangumiNet"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="bn:PhotoViewModel"
             x:Class="BangumiNet.Views.PhotoView">
    <MainImage Url="{Binding Images?.Large}">
		<WrapPanel Classes="InfoBar">
            <InfoItem Tip="创建时间" CommonText="{Binding CreationTime}" Icon="Calendar"/>
			<InfoItem Tip="ID" Text="{Binding Id}" Icon="SlideText"/>
			<InfoItem Tip="票数" Text="{Binding Vote}" Icon="People"/>
        </WrapPanel>
    </MainImage>
</UserControl>
