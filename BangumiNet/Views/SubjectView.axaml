<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:bn="https://github.com/ajtn123/BangumiNet"
             xmlns:ic="using:FluentIcons.Avalonia"
             xmlns:ice="using:FluentIcons.Avalonia.Markup"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="450"
             x:DataType="bn:SubjectViewModel"
             x:Class="BangumiNet.Views.SubjectView">
    <ScrollViewer>
        <StackPanel Spacing="5" Margin="5">
            <Grid ColumnDefinitions="250,*" RowDefinitions="Auto,*"
                  Classes="ViewRoot">
                <StackPanel Spacing="5">
                    <MainImage Url="{Binding Images?.Large}"/>
                    <bn:InfoboxView DataContext="{Binding Infobox}"/>
                    <bn:SubjectListView DataContext="{Binding IndexCardListViewModel}"/>
                    <Button Content="{ice:FluentIcon Icon=Add}"
                            Command="{Binding IndexCardListViewModel.LoadPageCommand}"
                            IsVisible="{Binding !IndexCardListViewModel.IsFullyLoaded}"
                            HorizontalAlignment="Stretch"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="{Binding Converter={StaticResource NameCnCvt}}"
                               Classes="Title" FontSize="30"/>
                    <TextBlock Text="{Binding Converter={StaticResource NameAltCvt}}"
                               IsVisible="{Binding $self.Text,Converter={StaticResource NEWCvt}}"
                               Classes="TitleAlt"/>
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto"
                          ColumnSpacing="5" RowSpacing="5">
                        <StackPanel Spacing="5">
                            <WrapPanel Classes="InfoBar">
                                <InfoItem Tip="用户评价" Text="{Binding Score}" Icon="Star" IconVariant="Color"/>
                                <InfoItem Tip="排名" Text="{Binding Rank}" Icon="NumberSymbol"/>
                                <InfoItem Tip="收藏" Text="{Binding CollectionTotal}" Icon="Collections"/>
                                <InfoItem Tip="在看" Text="{Binding Collection?.Doing}" Icon="Tv"/>
                                <InfoItem Tip="章节数" Text="{Binding EpisodeCount}" Icon="Layer"/>
                                <InfoItem Tip="册数" Text="{Binding VolumeCount}" Icon="Book"/>
                                <InfoItem Tip="放送开始" CommonText="{Binding Date}" Icon="Calendar"/>
                                <InfoItem Tip="放送日" CommonText="{Binding Weekday}" Icon="CalendarWeekNumbers"/>
                                <InfoItem Tip="类型" EnumText="{Binding Type}" Icon="Class"/>
                                <InfoItem Tip="平台" Text="{Binding Platform}" Icon="Apps"/>
                                <InfoItem Tip="ID" Text="{Binding Id}" Icon="SlideText"/>
                                <TextBlock>
                                    <ic:FluentIcon ToolTip.Tip="已收藏" Icon="Heart" IconVariant="Color" IsVisible="{Binding SubjectCollectionViewModel,Converter={StaticResource NullCvt}}"/>
                                    <ic:FluentIcon ToolTip.Tip="本条目是一个系列的主条目" Icon="LayerDiagonal" IsVisible="{Binding IsSeries}"/>
                                    <ic:FluentIcon ToolTip.Tip="NSFW" Icon="CalendarDate" IsVisible="{Binding IsNsfw}"/>
                                    <ic:FluentIcon ToolTip.Tip="本条目已锁定" Icon="LockClosed" IsVisible="{Binding IsLocked}"/>
                                    <ic:FluentIcon ToolTip.Tip="加载中" Icon="ArrowClockwiseDashes" IsVisible="{Binding !IsFull}"/>
                                </TextBlock>
                            </WrapPanel>
                            <bn:EpisodeListView DataContext="{Binding EpisodeListViewModel}"/>
                            <BBCode Text="{Binding Summary}"
                                    IsVisible="{Binding Summary,Converter={StaticResource NullCvt}}"/>
                            <bn:TagListView DataContext="{Binding TagListViewModel}"/>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Spacing="5">
                            <bn:SubjectCollectionCountView DataContext="{Binding Collection}"/>
                            <StackPanel Orientation="Horizontal" Spacing="5">
                                <Button Classes="Icon" Command="{Binding OpenInNewWindowCommand}" Content="{ice:FluentIcon Icon=Open}" ToolTip.Tip="在新窗口显示"/>
                                <Button Classes="Icon" Command="{Binding SearchWebCommand}" Content="{ice:FluentIcon Icon=Search}" ToolTip.Tip="搜索 Web"/>
                                <SplitButton Name="OpenInBrowserSplitButton"
                                             ToolTip.Tip="在 bangumi.tv 显示"
                                             Content="bangumi" Classes="Icon"
                                             Command="{Binding OpenInBrowserCommand}"/>
                                <Button Classes="Icon" Command="{Binding ShowRevisionsCommand}" Content="{ice:FluentIcon Icon=History}" ToolTip.Tip="显示条目修订历史"/>
                                <Button Classes="Icon" Command="{Binding ShowCoversCommand}" Content="{ice:FluentIcon Icon=ImageMultiple}" ToolTip.Tip="显示封面"/>
                                <Button Classes="Icon" Command="{Binding ShowNetworkCommand}" Content="{ice:FluentIcon Icon=TextAsterisk}" ToolTip.Tip="显示条目网络"/>
                                <Button Classes="Icon" Command="{Binding CollectCommand}" Content="{ice:FluentIcon Icon=AddSquare}" ToolTip.Tip="收藏"
                                        IsVisible="{Binding SubjectCollectionViewModel,Converter={StaticResource InNullCvt}}"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Spacing="5">
                            <bn:SubjectCollectionView DataContext="{Binding SubjectCollectionViewModel}"
                                                      IsVisible="{Binding $self.DataContext,Converter={StaticResource NullCvt}}"
                                                      Width="250"/>
                            <bn:SubjectRatingView DataContext="{Binding SubjectRatingViewModel}"
                                                  IsVisible="{Binding $self.DataContext,Converter={StaticResource NullCvt}}"
                                                  Width="250" Height="200"/>
                        </StackPanel>
                    </Grid>

                    <bn:RelatedItemListView DataContext="{Binding SubjectBadgeListViewModel}"/>
                    <bn:RelatedItemListView DataContext="{Binding CharacterBadgeListViewModel}"/>
                    <bn:RelatedItemListView DataContext="{Binding PersonBadgeListViewModel}"/>
                    <bn:RelatedItemListView DataContext="{Binding BlogCardListViewModel}"/>
                    <bn:RelatedItemListView DataContext="{Binding TopicCardListViewModel}"/>
                    <bn:RelatedItemListView DataContext="{Binding Recommendations}"/>

                    <Expander Header="吐槽箱" HorizontalAlignment="Stretch" IsExpanded="True">
                        <bn:CommentListView DataContext="{Binding CommentListViewModel}"/>
                    </Expander>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
