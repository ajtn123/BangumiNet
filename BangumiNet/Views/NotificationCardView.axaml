<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:bn="https://github.com/ajtn123/BangumiNet"
             xmlns:ice="using:FluentIcons.Avalonia.MarkupExtensions"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="bn:NotificationViewModel"
             x:Class="BangumiNet.Views.NotificationCardView">
    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="5">
        <MainImage Source="{Binding User.AvatarSmall^}"
                   Tag="{Binding User.Avatar.Small}"
                   VerticalAlignment="Top" Width="50">
            <Button Command="{Binding User.OpenInNewWindowCommand}"
                    Content="{ice:FluentIcon Icon=Person}"
                    Classes="Icon" ToolTip.Tip="显示用户"/>
        </MainImage>

        <StackPanel Grid.Column="1">
            <TextBlock Text="{Binding User.Username}"/>
            <TextBlock Text="{Binding CreationTime}"/>
            <TextBlock Text="{Binding NoticeTitle}"/>
            <TextBlock IsVisible="{Binding Unread}">未读</TextBlock>
            <TextBlock Text="{Binding Type}"/>
            <Separator/>
        </StackPanel>
    </Grid>
</UserControl>
