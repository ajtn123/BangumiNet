<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:v="using:BangumiNet.Views"
             xmlns:vm="using:BangumiNet.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 ClipToBounds="False"
             x:DataType="vm:CalendarViewModel"
             x:Class="BangumiNet.Views.CalendarView">

    <StackPanel>
        <Border Classes="Card">
            <TextBlock Text="{Binding Weekday}" Margin="5,0,0,0"/>
        </Border>
        <ItemsControl ItemsSource="{Binding Subjects}">
            <ItemsControl.DataTemplates>
                <DataTemplate DataType="vm:SubjectViewModel">
					<v:SubjectCardView DataContext="{Binding .}"/>
                </DataTemplate>
            </ItemsControl.DataTemplates>
        </ItemsControl>
    </StackPanel>
</UserControl>
