<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:bn="https://github.com/ajtn123/BangumiNet"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             bn:UserControlHelpers.ParentTitle="{Binding Title}"
             x:DataType="bn:NotificationListViewModel"
             x:Class="BangumiNet.Views.NotificationListView">
    <ScrollViewer>
        <bn:SubjectListView DataContext="{Binding Notifications}" Margin="5"/>
    </ScrollViewer>
</UserControl>
