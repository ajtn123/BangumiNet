<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:v="using:BangumiNet.Views"
             xmlns:vm="using:BangumiNet.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:SubjectViewModel"
             x:Class="BangumiNet.Views.SubjectCardView">
	<UserControl.Styles>
		<Style Selector="TextBlock.Title">
			<Setter Property="TextWrapping" Value="Wrap"/>
		</Style>
	</UserControl.Styles>
	<Grid ColumnDefinitions="30,*">
		<Image Source="{Binding ImageGrid^}"/>
		<TextBlock Text="{Binding .,Converter={StaticResource NameCnConverter}}" Classes="Title" Grid.Column="1"/>

		<Grid.ContextFlyout>
			<Flyout>
				<TextBlock Text="{Binding ShortSummary}"/>
			</Flyout>
		</Grid.ContextFlyout>
	</Grid>
</UserControl>
