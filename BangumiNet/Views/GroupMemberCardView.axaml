<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:bn="https://github.com/ajtn123/BangumiNet"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="bn:GroupMemberViewModel"
             x:Class="BangumiNet.Views.GroupMemberCardView">
    <Border Classes="Card Large">
        <StackPanel>
            <WrapPanel Classes="InfoBar">
				<InfoItem Tip="{Binding JoinTime,Converter={StaticResource CommonCvt},StringFormat='加入时间：{0}'}"
                          EnumText="{Binding Role}" Classes="Pri"/>
            </WrapPanel>
		    <bn:UserCardView/>
        </StackPanel>
    </Border>
</UserControl>
