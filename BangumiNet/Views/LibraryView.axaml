<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:bn="https://github.com/ajtn123/BangumiNet"
             xmlns:library="using:BangumiNet.Library"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="bn:LibraryViewModel"
             x:Class="BangumiNet.Views.LibraryView">
    <ScrollViewer>
        <ItemsControl ItemsSource="{Binding Library.Items}">
            <ItemsControl.DataTemplates>
			    <DataTemplate DataType="library:LibraryItem">
				    <TextBlock Text="{Binding Directory.Name}"/>
                </DataTemplate>
            </ItemsControl.DataTemplates>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
