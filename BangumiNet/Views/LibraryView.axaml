<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:bn="https://github.com/ajtn123/BangumiNet"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="bn:LibraryDirectoryViewModel"
             x:Class="BangumiNet.Views.LibraryView">
    <ScrollViewer>
        <StackPanel>
            <ItemsControl ItemsSource="{Binding Directories}"
                          ItemsPanel="{bn:SpacedStackPanel}">
                <ItemsControl.ItemTemplate>
			        <DataTemplate DataType="bn:LibraryDirectoryViewModel">
				        <bn:LibraryDirectoryCardView/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
		    <ItemsControl ItemsSource="{Binding Files}">
			    <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="bn:LibraryFileViewModel">
                        <bn:LibraryFileCardView/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>
