<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:bn="https://github.com/ajtn123/BangumiNet"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="bn:EpisodeViewModel"
             x:Class="BangumiNet.Views.EpisodeFullView">
    <ScrollViewer>
        <StackPanel Margin="5" Spacing="5">
            <bn:EpisodeView DataContext="{Binding}"/>

            <Expander Header="评论" HorizontalAlignment="Stretch"
                      Name="CommentExpander" IsExpanded="True">
                <bn:CommentListView DataContext="{Binding CommentListViewModel}" Name="CommentView"/>
            </Expander>
        </StackPanel>
    </ScrollViewer>
</UserControl>
