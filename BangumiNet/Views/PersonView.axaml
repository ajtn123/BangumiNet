<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:bn="https://github.com/ajtn123/BangumiNet"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:ic="using:FluentIcons.Avalonia"
             xmlns:ice="using:FluentIcons.Avalonia.Markup"
             xmlns:am="using:BangumiNet.Api.V0.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="bn:PersonViewModel"
             x:Class="BangumiNet.Views.PersonView">
    <ScrollViewer>
        <StackPanel Spacing="5" Margin="5">
            <Grid ColumnDefinitions="250,*" RowDefinitions="Auto,*"
                  Classes="ViewRoot">
                <StackPanel Spacing="5">
                    <MainImage Url="{Binding Images?.Large}"/>
                    <bn:InfoboxView DataContext="{Binding Infobox}" />
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="{Binding Converter={StaticResource NameCnCvt}}"
                               Classes="Title" FontSize="30"/>
                    <TextBlock Text="{Binding Converter={StaticResource NameAltCvt}}"
                               IsVisible="{Binding $self.Text,Converter={StaticResource NEWCvt}}"
                               Classes="TitleAlt"/>
                    <WrapPanel Classes="InfoBar">
                        <TextBlock ToolTip.Tip="收藏" IsVisible="{Binding CollectionTotal,Converter={StaticResource NullCvt}}"><ic:FluentIcon Icon="Collections"/><Run Text="{Binding CollectionTotal}"/></TextBlock>
                        <TextBlock ToolTip.Tip="评论" IsVisible="{Binding CommentCount,Converter={StaticResource NullCvt}}"><ic:FluentIcon Icon="Comment"/><Run Text="{Binding CommentCount}"/></TextBlock>
                        <TextBlock ToolTip.Tip="生日" IsVisible="{Binding Birthday,Converter={StaticResource NullCvt}}"><ic:FluentIcon Icon="Calendar"/><Run Text="{Binding Birthday,Converter={StaticResource DateCvt},Mode=OneWay}"/></TextBlock>
                        <TextBlock ToolTip.Tip="血型" IsVisible="{Binding BloodType,Converter={StaticResource NullCvt}}"><ic:FluentIcon Icon="Doctor"/><Run Text="{Binding BloodType}"/></TextBlock>
                        <TextBlock ToolTip.Tip="类型" IsVisible="{Binding Type,Converter={StaticResource NullCvt}}"><ic:FluentIcon Icon="Class"/><Run Text="{Binding Type,Converter={StaticResource PersonTypeCvt},Mode=OneWay}"/></TextBlock>
                        <TextBlock ToolTip.Tip="职业" IsVisible="{Binding CareerString,Converter={StaticResource NullCvt}}"><ic:FluentIcon Icon="LayerDiagonalPerson"/><Run Text="{Binding CareerString}"/></TextBlock>
                        <TextBlock ToolTip.Tip="ID" IsVisible="{Binding Id,Converter={StaticResource NullCvt}}"><ic:FluentIcon Icon="SlideText"/><Run Text="{Binding Id}"/></TextBlock>
                        <TextBlock>
                            <ic:FluentIcon ToolTip.Tip="已收藏" Icon="Heart" IconVariant="Color" IsVisible="{Binding IsCollected}"/>
                            <ic:FluentIcon ToolTip.Tip="本条目已锁定" Icon="LockClosed" IsVisible="{Binding IsLocked}"/>
                        </TextBlock>
                    </WrapPanel>
                    <BBCode Text="{Binding Summary}" Margin="0,0,0,5"
                            IsVisible="{Binding Summary,Converter={StaticResource NullCvt}}"/>
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <Button Classes="Icon" Command="{Binding OpenInNewWindowCommand}" Content="{ice:FluentIcon Icon=Open}" ToolTip.Tip="在新窗口显示"/>
                        <Button Classes="Icon" Command="{Binding SearchWebCommand}" Content="{ice:FluentIcon Icon=Search}" ToolTip.Tip="搜索 Web"/>
                        <Button Classes="Icon" Command="{Binding OpenInBrowserCommand}" Content="{ice:FluentIcon Icon=Globe}" ToolTip.Tip="在 bangumi.tv 显示"/>
                        <Button Classes="Icon" Command="{Binding ShowRevisionsCommand}" Content="{ice:FluentIcon Icon=History}" ToolTip.Tip="显示条目修订历史"/>
                        <Button Classes="Icon" Command="{Binding ShowNetworkCommand}" Content="{ice:FluentIcon Icon=TextAsterisk}" ToolTip.Tip="显示条目网络"/>
                        <Button Command="{Binding CollectCommand}"
                                IsVisible="{Binding !IsCollected}"
                                Content="{ice:FluentIcon Icon=Collections}"
                                ToolTip.Tip="收藏" Classes="Icon"/>
                        <Button Command="{Binding UncollectCommand}"
                                IsVisible="{Binding IsCollected}"
                                Content="{ice:FluentIcon Icon=DismissSquareMultiple}"
                                ToolTip.Tip="取消收藏" Classes="Icon"/>
                    </StackPanel>
                    <Separator/>
                    <bn:RelatedItemListView DataContext="{Binding SubjectBadgeListViewModel}"/>
                    <Separator/>
                    <bn:RelatedItemListView DataContext="{Binding CharacterBadgeListViewModel}"/>

                    <Expander Header="评论" HorizontalAlignment="Stretch"
                              Name="CommentExpander" IsExpanded="True">
                        <bn:CommentListView DataContext="{Binding CommentListViewModel}" Name="CommentView"/>
                    </Expander>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
