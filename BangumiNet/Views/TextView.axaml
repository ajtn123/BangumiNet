<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:bn="https://github.com/ajtn123/BangumiNet"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="bn:TextViewModel"
             x:Class="BangumiNet.Views.TextView">
    <UserControl.Styles>
		<Style Selector="HyperlinkButton">
            <Setter Property="Classes.Pri" Value="True"/>
        </Style>
        <Style Selector=":is(Inline)">
			<Setter Property="BaselineAlignment" Value="Center"/>
        </Style>
    </UserControl.Styles>
    <SelectableTextBlock Inlines="{Binding Inlines}"
                         Focusable="{Binding IsFocusable}"
                         TextWrapping="Wrap"/>
</UserControl>
